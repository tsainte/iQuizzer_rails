<%= form_for @quiz do |f| %>
	<% if @quiz.errors.any? %>
		<div class = "error_messages">
			<h2><%= pluralize(@quiz.errors.count, "error") %> impedem esse quiz de ser salvo:</h2>
			<ul>
				<% @quiz.errors.full_messages.each do |msg| %>
				<li> <%=msg%> </li>
				<% end %>
			</ul>
		</div>
	<% end %>
	
	<div class="field">
		<%= f.label :título %><br />
		<%= f.text_field :titulo %>
	</div>
	<div class="field">
		<%= f.label :descrição %><br />
		<%= f.text_area :descricao %>
	</div>
	<div class="field">
		<%= f.label :"Modo de jogo" %><br />
		
		<%= f.select :modojogo, options_for_select([["Aleatório", 1], ["Em ordem", 2]], @quiz.modojogo) %>
	</div>
	<div class="field">
		<%= f.label :"Questões por jogo" %><br />
		<%= f.text_field :maxquestoes %>
	</div>
	
	<%= f.fields_for :perguntas do |builder| %>
	<% render 'pergunta_fields', f:builder%>
	<% end %>
	<%= link_to_add_fields "Adicionar pergunta", f, :perguntas %>
	
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
		