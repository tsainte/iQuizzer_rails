<table class="table table-hover">
	<thead>
    <tr>
      <th>#</th>
      <th>Dia/hora</th>
      <th>Quiz</th>
	  <th>Jogador</th>
    </tr>
  </thead>
  <tbody>
	<% @jogos.each do |jogo|%>
		<tr>
			<td> <%= jogo.id %> </td>
			<% diahora = jogo.dia + " " + jogo.hora %>
