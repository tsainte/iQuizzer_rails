<%= form_for @jogo do |f| %>
	<% if @jogo.errors.any? %>
		<div class = "error_messages">
			<h2><%= pluralize(@jogo.errors.count, "error") %> impedem esse jogo de ser salvo:</h2>
			<ul>
				<% @jogo.errors.full_messages.each do |msg| %>
				<li> <%=msg%> </li>
				<% end %>
			</ul>
		</div>
	<% end %>
	
	<div class="field">
		<%= f.label :dia %><br />
		<%= f.text_field :dia %>
	</div>
	<div class="field">
		<%= f.label :hora %><br />
		<%= f.text_field :hora %>
	</div>
	<div class="field">
		<%= f.label :pontos %><br />
		<%= f.text_field :pontos %>
	</div>
	
	<%= f.fields_for :resultados do |builder| %>
	<% render 'resultado_fields', f: builder %>
 
	<% end %>
	<%= link_to_add_fields "Adicionar resultado", f, :resultados %>
	
	<div class="actions">
		<%= f.submit %>
	</div>
	
<% end %>
		