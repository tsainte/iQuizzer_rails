<%= form_for @usuario do |f| %>
<% if @usuario.errors.any? %>
		<div class = "error_messages">
			<h2><%= pluralize(@usuario.errors.count, "error") %> impedem esse usuario de ser salvo:</h2>
			<ul>
				<% @usuario.errors.full_messages.each do |msg| %>
				<li> <%=msg%> </li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :apelido %><br />
		<%= f.text_field :apelido, :readonly => true %>
	</div>
	<div class="field">
		<%= f.label :nome %><br />
		<%= f.text_field :nome %>
	</div>

	<div class="field">
		<%= f.label :sobrenome %><br />
		<%= f.text_field  :sobrenome %>
	</div>
	
	<div class="actions">
		<%= f.submit %>
	</div>

<% end %>	